KWKUniJS.ptag({
 'zone' : 'product',
 'productId' : '{{ product.id }}',
 'categoryId' : '{{ collection.id }}',
 'customerId' : '{{ customer.id }}',
 'siteType' : 'd',
'language' : 'fr_FR',
 'm_md5' : '{{ customer.email }}'
});
</script>
